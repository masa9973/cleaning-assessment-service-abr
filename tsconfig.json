{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "allowJs": true,
      "pretty": true,
      "newLine": "lf",
      "outDir": "dist",
      "esModuleInterop": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "src/**/*.test.ts",
      "test/**/*.ts",
      "src/**/test/**/*.ts",
      "node_modules"
    ]
  }